+int status_change_3rdclear(struct block_list* bl)
+{
+	struct status_change* sc;
+	int i;
+
+	sc = status_get_sc(bl);
+
+	if (!sc || !sc->count)
+		return 0;
+
+	for(i = 350; i < SC_MAX; i++)
+	{
+		if(!sc->data[i])
+		  continue;
+		status_change_end(bl, (sc_type)i, INVALID_TIMER);
+	}
+
+	sc->opt1 = 0;
+	sc->opt2 = 0;
+	sc->opt3 = 0;
+	sc->option &= OPTION_MASK;
+
+	clif_changeoption(bl);
+
+	return 1;
+}
